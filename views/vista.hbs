<style>
  img {
    width: 50px;
    height: auto;
    display: block;
}
</style>
<div class="col-md-12 mx-auto">
  <h3 class="mb-5">Listado de productos</h3>
  {{#if productos.length}}
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Price</th>
        <th scope="col">Image</th>
      </tr>
    </thead>
    <tbody>
      {{#each productos}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.title}}</td>
        <td>{{this.price}}</td>
        <td>
          <img src="https://cdn1.iconfinder.com/data/icons/fruit-39/128/FRUIT_2-{{this.thumbnail}}-128.png" />
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <div class="alert alert-danger">
    <strong>No hay productos!</strong>
  </div>
  {{/if}}
</div>